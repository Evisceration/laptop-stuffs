#!/bin/bash

if [ -z $2 ]; then
	DEVICE=find7u
else
	DEVICE=$2
fi

adb wait-for-device
adb root
adb wait-for-device
adb remount
adb wait-for-device
adb shell mkdir -p /system/priv-app/$1
adb push /android/out/target/product/${DEVICE}/system/priv-app/$1/$1.apk /system/priv-app/$1/$1.apk
adb shell chmod 644 /system/priv-app/$1/$1.apk
